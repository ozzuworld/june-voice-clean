# LiveKit Configuration
# Required: Your LiveKit server WebSocket URL
EXPO_PUBLIC_LIVEKIT_URL=wss://your-project.livekit.cloud

# Option 1: LiveKit Cloud Sandbox (Recommended for Development)
# Create a sandbox token server in your LiveKit Cloud project dashboard
# This is the safest way to generate tokens for development/testing
EXPO_PUBLIC_SANDBOX_ID=your-sandbox-token-server-id

# Option 2: Manual API Keys (Development Only - NOT for Production)
# WARNING: These keys should NEVER be exposed in production builds
# Use only for local development when backend token server is not available
# EXPO_PUBLIC_LIVEKIT_API_KEY=your-api-key
# EXPO_PUBLIC_LIVEKIT_SECRET_KEY=your-secret-key

# Application Configuration
EXPO_PUBLIC_APP_NAME=June Voice Assistant
EXPO_PUBLIC_DEFAULT_ROOM=june-voice-room

# Development Settings
EXPO_PUBLIC_DEBUG_MODE=true

# Backend Integration (Optional)
# If you have a backend server that generates tokens
# EXPO_PUBLIC_BACKEND_URL=https://your-backend.com

# Voice Assistant Configuration
EXPO_PUBLIC_ENABLE_VIDEO=false
EXPO_PUBLIC_AUDIO_ONLY=true
EXPO_PUBLIC_AUTO_CONNECT_MIC=true

# LiveKit Agent Configuration (if using agents)
EXPO_PUBLIC_AGENT_ENABLED=true
EXPO_PUBLIC_AGENT_NAME=june-voice-agent