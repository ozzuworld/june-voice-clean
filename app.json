{
  "expo": {
    "name": "June Voice App",
    "slug": "june-voice-app", 
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "june",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.junevoice",
      "deploymentTarget": "15.1",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "June needs microphone access for voice calls and real-time chat with AI.",
        "NSCameraUsageDescription": "June may need camera access for future video call features.",
        "NSLocalNetworkUsageDescription": "June needs local network access for peer-to-peer voice connections.",
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "com.yourcompany.junevoice",
            "CFBundleURLSchemes": ["june"]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.kkazuma.junevoiceworkspace",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.CHANGE_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.WAKE_LOCK",
        "android.permission.ACCESS_WIFI_STATE",
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "june"
            }
          ],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ],
      "compileSdkVersion": 35,
      "targetSdkVersion": 34,
      "buildToolsVersion": "35.0.0"
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "ios": {
            "deploymentTarget": "15.1"
          },
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 34,
            "buildToolsVersion": "35.0.0"
          }
        }
      ],
      [
        "@config-plugins/react-native-webrtc",
        {
          "cameraPermission": "Allow June to access camera for video calls (optional)",
          "microphonePermission": "Allow June to access microphone for voice calls"
        }
      ],
      [
        "@livekit/react-native-expo-plugin",
        {
          "android": {
            "audioType": "communication"
          }
        }
      ],
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id-here"
      }
    }
  }
}